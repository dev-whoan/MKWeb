<?xml version="1.0" encoding="UTF-8"?>

<MkSQL xmlid="sql">
	<sql id="selectUser" db="mkweb">
		SELECT name, address
		FROM User;
	</sql>
	
	<sql id="selectOnlyName" db="mkweb">
		SELECT name, address
		FROM User
		WHERE name LIKE @user_name@;
	</sql>
	
	<sql id="selectName" db="mkweb">
		SELECT name, address
		FROM User
		WHERE name LIKE @user_name@ and address LIKE @user_info@;
	</sql>
	
	<sql id="insertUser" db="mkweb">
		INSERT INTO User
		(name, address)
		VALUES
		(@user_name@, @user_info@);
	</sql>
</MkSQL>