	<listener>
		<listener-class>com.mkweb.web.MkWebContextListener</listener-class>
	</listener>

	<context-param>
		<param-name>MKWeb.SqlConfigs</param-name>
		<param-value>/WEB-INF/classes/configs/MkSql_config.xml</param-value>
	</context-param>

	<context-param>
		<param-name>MKWeb.Configs</param-name>
		<param-value>/WEB-INF/classes/configs/MkConfigure.xml</param-value>
	</context-param>

	<context-param>
		<param-name>MKWeb.PageConfigs</param-name>
		<param-value>/WEB-INF/classes/configs/views</param-value>
	</context-param>
</web-app>