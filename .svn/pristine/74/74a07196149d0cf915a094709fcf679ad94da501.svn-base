<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>MkWeb</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
		<servlet>
		<servlet-name>MkWebDispatcher</servlet-name>
		<servlet-class>com.mkweb.dispatcher.testMkDispatcher</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>MkWebDispatcher</servlet-name>
		<url-pattern>*.mkw</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DefaultDispatcher</servlet-name>
		<servlet-class>com.mkweb.dispatcher.testDefDispatcher</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>DefaultDispatcher</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
