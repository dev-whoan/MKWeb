<views>
	<Control name="users" debug="error" dir_key="/" authorized="yes" post="yes" get="yes" put="yes" delete="yes" options="yes" head="yes">
		<returnStructure value="user:location:name" />
		<Service type="sql">
			<Sql id="api_selectUser" method="get" />
			<Parameter name="api_sel_user" />
